{
  "manifest_version": 3,
  "name": "URL Locale Cleaner",
  "version": "0.1.0",
  "description": "Automatically removes locale segments and marketing params from copied URLs before they hit your clipboard.",
  "permissions": [
    "clipboardWrite",
    "contextMenus",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "URL Locale Cleaner",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["url-cleaner.js", "content-script.js"],
      "run_at": "document_start"
    }
  ]
}
