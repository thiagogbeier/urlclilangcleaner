{
  "manifest_version": 3,
  "name": "URL Locale Cleaner",
  "version": "0.2.0",
  "description": "Automatically removes locale segments and marketing params from copied URLs before they hit your clipboard.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "clipboardWrite",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Copy Clean URL"
  }
}
